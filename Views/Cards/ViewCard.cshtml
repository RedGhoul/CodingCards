@model Card
    <style>
        footer {
            position: fixed;
        }
    </style>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@Html.Raw(@Model.Question)</h5>
                        <hr />
                        <div class="row">
                            
                            <div class="alert alert-success" role="alert" id="AnswerDisplay" style="display: none;">
                                <p>@Html.Raw(@Model.Answer)</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">

                            </div>
                            <div class="col-4 text-center">
                                <a class="btn btn-sm btn-secondary" id="ViewAnswerBtn">View Answer</a>
                            </div>
                            <div class="col-4">

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">

                            </div>
                            <div class="col-4 text-center">
                                <a class="btn btn-sm btn-danger" asp-action="GetRandomCard">Didn't know it</a>
                            </div>
                            <div class="col-4">

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">

                            </div>
                            <div class="col-4 text-center">
                                <a class="btn btn-sm btn-primary" asp-action="GetRandomCard">Next Question ></a>
                            </div>
                            <div class="col-4">

                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-muted">
                        Views: @Model.NumberOfViews
                    </div>
                </div>
            </div>
        </div>
    </div>



@section Scripts{
    <script>
        $(document).ready(function () {
            $("#ViewAnswerBtn").click(function () {
                $("#AnswerDisplay").show();
            })
        });
    </script>
}
