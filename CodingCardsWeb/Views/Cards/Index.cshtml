@model CardIndexViewModel

<section class="home-section section-hero overlay bg-image" style="background-image: url('images/hero_1.jpg');" id="home-section">

    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-md-12">
                <div class="mb-5 text-center">
                    <h1 class="font-weight-bold">Search All Cards</h1>
                    <p>Get Better at Algorithms Fast !</p>
                </div>
                @using (Html.BeginForm("IndexPost", "Cards", FormMethod.Post))
                {
                    <div class="row mb-5">
                        <div class="col-6 col-sm-6 col-md-4 col-lg-4 mb-4 mb-lg-0">
                            <input type="text" name="KeyWords" class="form-control form-control-lg" placeholder="Job title, keywords...">
                        </div>
                        @if (ViewBag.Page == null)
                        {
                            <input type="hidden" name="FindModel.Page" value="@(ViewBag.Page)" />
                        }
                        else
                        {
                            <input type="hidden" name="FindModel.Page" value="0" />
                        }
                        <div class="col-6 col-sm-6 col-md-4 col-lg-4 mb-4 mb-lg-0">
                            <select class="form-control">
                                <option>Type</option>
                                <option>Generic</option>
                                <option>Math</option>
                                <option>OOP Design</option>
                                <option>System Design</option>
                            </select>
                        </div>
                        <div class="col-6 col-sm-6 col-md-4 col-lg-4 mb-4 mb-lg-0">
                            <button type="submit" class="btn btn-warning btn-lg btn-block btn-search"><span class="icon-search icon mr-2"></span>Search Card</button>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>


</section>
<section class="site-section">
    <div class="container">

        <div class="row mb-5 justify-content-center">
            <div class="col-md-7 text-center">
                <h2 class="section-title mb-2">@ViewBag.TotalCards Cards Listed</h2>
            </div>
        </div>


        <div class="mb-5">
            @if (Model.Cards.Count() > 0)
            {
                <div class="row text-center">
                    <div class="col-md-12 text-center">
                        <div class="row" style="margin-bottom: 30px;">
                            <div class="col-sm-6 col-md-4 col-lg-4 mb-4 mb-lg-0">
                                @if (ViewBag.Page > 1)
                                {
                                    @using (Html.BeginForm("IndexPost", "Cards", FormMethod.Post))
                                    {
                                        <input type="hidden" name="KeyWords" value="@ViewBag.KeyWords" />
                                        <input type="hidden" name="MaxResults" value="@ViewBag.MaxResults" />
                                        <input type="hidden" name="Page" value="@(ViewBag.Page - 1)" />
                                        <button type="submit" class="btn btn-warning btn-lg next" style="width: 300px">&laquo; Prev</button>
                                    }
                                }
                            </div>
                            <div class="col-sm-6 col-md-4 col-lg-4 mb-4 mb-lg-0">

                            </div>
                            <div class="col-sm-6 col-md-4 col-lg-4 mb-4 mb-lg-0">
                                @if (ViewBag.Page < ViewBag.MaxPage)
                                {
                                    @using (Html.BeginForm("IndexPost", "Cards", FormMethod.Post))
                                    {
                                        <input type="hidden" name="KeyWords" value="@ViewBag.KeyWords" />
                                        <input type="hidden" name="MaxResults" value="@ViewBag.MaxResults" />
                                        <input type="hidden" name="Page" value="@(ViewBag.Page + 1)" />
                                        <button type="submit" class="btn btn-warning btn-lg next" style="width: 300px">Next &raquo;</button>
                                    }

                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row align-items-start job-item border-bottom pb-3 mb-3 pt-3">
                    <div class="col-md-6 text-left">
                        <span class="badge badge-primary px-2 py-1 mb-3"></span>
                        <h3>Question</h3>
                    </div>
                    <div class="col-md-4">
                        <h3>Type</h3>
                    </div>
                    <div class="col-md-2">
                        <h3>View</h3>
                    </div>

                </div>
                @for (int i = 0; i < Model.Cards.Count(); i++)
                {

                    <div class="row align-items-start job-item border-bottom pb-3 mb-3 pt-3">
                        <div class="col-md-6 text-left">
                            <span class="badge badge-primary px-2 py-1 mb-3"></span>
                            <h5>@Model.Cards[i].Question</h5>
                        </div>
                        <div class="col-md-4">
                            <h5>@Model.Cards[i].Type</h5>
                        </div>
                        <div class="col-md-2">
                            <a class="btn btn-warning" asp-action="ViewCard" asp-controller="Cards" asp-route-id="@Model.Cards[i].id">View</a>
                        </div>

                    </div>
                }

                <div class="row text-center">
                    <div class="col-md-12 text-center">
                        <div class="row" style="margin-top: 30px;">
                            <div class="col-sm-6 col-md-4 col-lg-4 mb-4 mb-lg-0">
                                @if (ViewBag.Page > 1)
                                {
                                    @using (Html.BeginForm("IndexPost", "Cards", FormMethod.Post))
                                    {
                                        <input type="hidden" name="KeyWords" value="@ViewBag.KeyWords" />
                                        <input type="hidden" name="MaxResults" value="@ViewBag.MaxResults" />
                                        <input type="hidden" name="Page" value="@(ViewBag.Page - 1)" />
                                        <button type="submit" class="btn btn-warning btn-lg next" style="width: 300px">&laquo; Prev</button>
                                    }
                                }
                            </div>
                            <div class="col-sm-6 col-md-4 col-lg-4 mb-4 mb-lg-0">

                            </div>
                            <div class="col-sm-6 col-md-4 col-lg-4 mb-4 mb-lg-0">
                                @if (ViewBag.Page < ViewBag.MaxPage)
                                {
                                    @using (Html.BeginForm("IndexPost", "Cards", FormMethod.Post))
                                    {
                                        <input type="hidden" name="KeyWords" value="@ViewBag.KeyWords" />
                                        <input type="hidden" name="MaxResults" value="@ViewBag.MaxResults" />
                                        <input type="hidden" name="Page" value="@(ViewBag.Page + 1)" />
                                        <button type="submit" class="btn btn-warning btn-lg next" style="width: 300px">Next &raquo;</button>
                                    }

                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="row align-items-start job-item border-bottom pb-3 mb-3 pt-3">
                    <div class="col-md-2"></div>
                    <div class="col-md-4"><h4 style="text-align:center;">Sorry nothing was found matching that criteria</h4></div>
                    <div class="col-md-4">
                        @using (Html.BeginForm("IndexPost", "Cards", FormMethod.Post))
                        {
                            <input type="hidden" name="KeyWords" value="@ViewBag.KeyWords" />
                            <input type="hidden" name="FindModel.MaxResults" value="@ViewBag.MaxResults" />
                            <input type="hidden" name="FindModel.page" value="1" />
                            <button type="submit" class="btn btn-primary btn-lg">Back To Search</button>
                        }
                    </div>
                    <div class="col-md-2"></div>

                </div>
            }

        </div>

        @*<div class="row pagination-wrap">

                <div class="col-md-6 text-center text-md-left">
                    <div class="custom-pagination ml-auto">
                        <a href="#" class="prev">Previous</a>
                        <div class="d-inline-block">
                            <a href="#" class="active">1</a>
                            <a href="#">2</a>
                            <a href="#">3</a>
                            <a href="#">4</a>
                        </div>
                        <a href="#" class="next">Next</a>
                    </div>
                </div>
            </div>*@

    </div>
</section>

