<section class="home-section section-hero overlay bg-image" style="background-image: url('images/hero_1.jpg');" id="home-section">

    <div class="container">
        <div class="row align-items-center justify-content-center">
            <div class="col-md-12">
                <div class="mb-5 text-center">
                    <h1 class="font-weight-bold">Search All Cards</h1>
                    <p>Get Better at Algorithms Fast !</p>
                </div>
                <form method="post" class="search-jobs-form">
                    <div class="row mb-5">
                        <div class="col-6 col-sm-6 col-md-4 col-lg-4 mb-4 mb-lg-0">
                            <input type="text" class="form-control form-control-lg" placeholder="Job title, keywords...">
                        </div>
                        <div class="col-6 col-sm-6 col-md-4 col-lg-4 mb-4 mb-lg-0">
                            <select class="form-control">
                                <option>Type</option>
                                <option>Generic</option>
                                <option>Math</option>
                                <option>OOP Design</option>
                                <option>System Design</option>
                            </select>
                        </div>
                        <div class="col-6 col-sm-6 col-md-4 col-lg-4 mb-4 mb-lg-0">
                            <button type="submit" class="btn btn-primary btn-lg btn-block text-white btn-search"><span class="icon-search icon mr-2"></span>Search Card</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


</section>
<section class="site-section">
    <div class="container">

        <div class="row mb-5 justify-content-center">
            <div class="col-md-7 text-center">
                <h2 class="section-title mb-2">@ViewBag.TotalCards Cards Listed</h2>
            </div>
        </div>


        <div class="mb-5">
            <div class="row align-items-start job-item border-bottom pb-3 mb-3 pt-3">
                <div class="col-md-6 text-left">
                    <span class="badge badge-primary px-2 py-1 mb-3"></span>
                    <h5>Question</h5>
                </div>
                <div class="col-md-4">
                    <h5>Type</h5>
                </div>
                <div class="col-md-2">
                    <h5>View</h5>
                </div>

            </div>
            @for (int i = 0; i < Model.Count(); i++)
            {

                <div class="row align-items-start job-item border-bottom pb-3 mb-3 pt-3">
                    <div class="col-md-6 text-left">
                        <span class="badge badge-primary px-2 py-1 mb-3"></span>
                        <h5>@Model[i].Question</h5>
                    </div>
                    <div class="col-md-4">
                        <h5>@Model[i].Type</h5>
                    </div>
                    <div class="col-md-2">
                        <a class="btn btn-warning" asp-action="ViewCard" asp-controller="Cards" asp-route-id="@Model[i].id">View</a>
                    </div>

                </div>
            }
          

            

