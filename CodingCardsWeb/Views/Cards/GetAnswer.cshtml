@model CodingCards.Models.Card

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Card</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Question)
        </dt>
        <dd class = "col-sm-10">
            <h2>@Model.Question</h2>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Answer)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Answer)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.id"  class="btn btn-dark" >Edit</a> |
    <a asp-action="GetCard"  class="btn btn-dark">Back to List</a> |
    <a asp-action="GetCard" class="btn btn-dark">Get Another</a>
</div>
